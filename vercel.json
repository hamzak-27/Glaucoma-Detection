{
    "version": 2,
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "installCommand": "pip install -r requirements.txt",
    "outputDirectory": "staticfiles",
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "glaucoma_detector.settings",
        "PYTHONPATH": ".",
        "DJANGO_DEBUG": "False"
    }
} 