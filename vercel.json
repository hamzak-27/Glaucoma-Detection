{
    "version": 2,
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "installCommand": "pip install -r requirements.txt",
    "outputDirectory": "staticfiles",
    "builds": [
        {
            "src": "glaucoma_detector/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxDuration": 10
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/admin/.*",
            "dest": "glaucoma_detector/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "glaucoma_detector/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "glaucoma_detector.settings",
        "PYTHONPATH": ".",
        "DJANGO_DEBUG": "False"
    }
} 