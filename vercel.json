{
    "version": 2,
    "buildCommand": "python3 -m pip install -r requirements.txt",
    "outputDirectory": "staticfiles",
    "builds": [
        {
            "src": "vercel-build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        },
        {
            "src": "glaucoma_detector/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "glaucoma_detector/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "glaucoma_detector.settings",
        "PYTHONPATH": "."
    }
} 